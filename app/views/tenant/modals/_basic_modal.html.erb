<div class="modal fade" id="<%= model_id %>" tabindex="-1" aria-labelledby="<%= model_id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= model_id %>Label"><%= heading %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: builder[:additional][:klass], url: builder[:additional][:path] do |form| %>
          <%= modal_form_builder(form, builder) %>
          <div class="modal-footer">
            <button type="button" id="close-popup" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary"><%= submit_btn_text %></button>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>